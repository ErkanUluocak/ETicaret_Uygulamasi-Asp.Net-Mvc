@model IEnumerable<E_Ticaret.Models.Kategori>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategoriAdi)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.KategoriID }) |
                @Html.ActionLink("Details", "Details", new { id = item.KategoriID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.KategoriID }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }

</table>
